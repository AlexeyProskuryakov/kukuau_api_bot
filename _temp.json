curl -XPOST "http://localhost:9200/autocomplete" -d '{
  "settings": {
    "index": {
      "analysis": {
        "analyzer": {
          "autocomplete_analyzer": {
            "type": "custom",
            "tokenizer": "lowercase",
            "filter": [
              "asciifolding",
              "title_ngram"
            ]
          }
        },
        "filter": {
          "title_ngram": {
            "type": "nGram",
            "min_gram": 3,
            "max_gram": 5
          }
        }
      }
    }
  },
  "mappings": {
    "name": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "default": {
          "type": "string",
          "analyzer": "autocomplete_analyzer"
        },
        "ru": {
          "type": "string",
          "analyzer": "autocomplete_analyzer"
        }
      }
    },
        "street": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "default": {
          "type": "string",
          "analyzer": "autocomplete_analyzer"
        },
        "ru": {
          "type": "string",
          "analyzer": "autocomplete_analyzer"
        }
      }
    },
    "osm_id": {
      "properties": {
        "osm_id": {
          "type": "long",
          "index": "not_analyzed"
        }
      }
    }
  }
}'